# TotHub Environment Variables Template
# Copy this file to .env and configure your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tothub

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
DIRECTOR_PASSWORD_HASH=your-bcrypt-hashed-director-password
TEACHER_PASSWORD_HASH=your-bcrypt-hashed-teacher-password
STAFF_PASSWORD_HASH=your-bcrypt-hashed-staff-password

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# Redis Configuration (Optional - for production caching)
REDIS_URL=redis://localhost:6379

# Production Settings
NODE_ENV=production
PORT=5000

# Sentry Error Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# External API Keys (Add as needed)
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token
# QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id