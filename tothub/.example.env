# TotHub Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
DATABASE_URL=postgresql://username:password@host:port/database_name

# =============================================================================
# REQUIRED - Authentication & Security
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-key-here
SESSION_SECRET=your-super-secure-session-secret-key-here
NODE_ENV=development

# =============================================================================
# REQUIRED - Stripe Payment Processing
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =============================================================================
# REQUIRED - Email Service (SendGrid)
# =============================================================================
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@tothub.com
FROM_NAME=TotHub

# =============================================================================
# REQUIRED - CORS & Security
# =============================================================================
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://tothub.com

# =============================================================================
# OPTIONAL - Redis (for production session storage)
# =============================================================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# OPTIONAL - File Storage (AWS S3)
# =============================================================================
# S3_BUCKET=your-s3-bucket-name
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key
# S3_REGION=us-east-1

# =============================================================================
# OPTIONAL - Monitoring & Analytics
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn-here
# POSTHOG_API_KEY=your_posthog_api_key_here
# POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# OPTIONAL - SMS Service (Twilio)
# =============================================================================
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# OPTIONAL - Push Notifications
# =============================================================================
# VAPID_PUBLIC_KEY=your_vapid_public_key
# VAPID_PRIVATE_KEY=your_vapid_private_key

# =============================================================================
# OPTIONAL - Third-party Integrations
# =============================================================================
# QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
# QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
# QUICKBOOKS_REDIRECT_URI=your_redirect_uri

# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# OPTIONAL - Development & Testing
# =============================================================================
# LOG_LEVEL=debug
# ENABLE_SWAGGER=true
# MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# OPTIONAL - Performance & Caching
# =============================================================================
# CACHE_TTL=300000
# MAX_CACHE_SIZE=1000
# ENABLE_COMPRESSION=true

# =============================================================================
# OPTIONAL - Backup & Maintenance
# =============================================================================
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# MAINTENANCE_MODE=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env files to version control
# 2. Use strong, unique secrets for JWT_SECRET and SESSION_SECRET
# 3. Rotate secrets regularly in production
# 4. Use environment-specific values (dev/staging/prod)
# 5. Consider using a secrets management service in production
